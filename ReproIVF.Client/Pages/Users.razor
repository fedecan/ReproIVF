@page "/users"
@using ReproIVF.Shared.Security

<PageTitle>Users</PageTitle>

<h1>Users</h1>

@if (isLoading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrWhiteSpace(error))
{
    <p class="error">@error</p>
}
else
{
    <section class="panel">
        <h2>New / Edit User</h2>
        <EditForm Model="@form" OnValidSubmit="SaveAsync">
            <div class="grid">
                <label>Username</label>
                <InputText @bind-Value="form.Username" />

                <label>Role</label>
                <InputSelect @bind-Value="form.Role">
                    <option value="@AppRoles.Admin">@AppRoles.Admin</option>
                    <option value="@AppRoles.Client">@AppRoles.Client</option>
                </InputSelect>

                <label>Password</label>
                <InputText @bind-Value="form.Password" type="password" placeholder="Required for create. Optional for update." />
            </div>
            <div class="actions">
                <button type="submit">@((editingId.HasValue) ? "Update" : "Create")</button>
                <button type="button" class="secondary" @onclick="ResetForm">Clear</button>
            </div>
        </EditForm>
    </section>

    <section class="panel">
        <h2>Users List</h2>
        <table class="list">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in users)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Username</td>
                        <td>@item.Role</td>
                        <td class="row-actions">
                            <button type="button" class="icon-btn" title="Edit" @onclick="() => StartEdit(item)">
                                <svg viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zm2.92 2.33H5v-.92l9.06-9.06.92.92L5.92 19.58zM20.71 7.04a1.003 1.003 0 0 0 0-1.42L18.37 3.29a1.003 1.003 0 0 0-1.42 0l-1.83 1.83 3.75 3.75 1.84-1.83z"></path>
                                </svg>
                            </button>
                            <button type="button" class="icon-btn danger" title="Delete" @onclick="() => DeleteAsync(item.Id)">
                                <svg viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M6 7h12l-1 14H7L6 7zm3 2v10h2V9H9zm4 0v10h2V9h-2zM9 4h6l1 2h4v2H4V6h4l1-2z"></path>
                                </svg>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
}

@code {
    [Inject] public ApiClient Api { get; set; } = default!;
    [Inject] public IJSRuntime JS { get; set; } = default!;

    private bool isLoading = true;
    private string? error;
    private List<ReproIVF.Shared.Auth.UserView> users = new();
    private ReproIVF.Shared.Auth.UserUpsert form = new() { Role = AppRoles.Client };
    private int? editingId;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadAsync()
    {
        users = await Api.GetUsersAsync();
    }

    private async Task SaveAsync()
    {
        error = null;
        try
        {
            if (editingId.HasValue)
            {
                await Api.UpdateUserAsync(editingId.Value, form);
            }
            else
            {
                if (string.IsNullOrWhiteSpace(form.Password))
                {
                    error = "Password is required for new users.";
                    return;
                }

                await Api.CreateUserAsync(form);
            }

            await LoadAsync();
            ResetForm();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task DeleteAsync(int id)
    {
        error = null;
        try
        {
            var confirmDelete = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete user #{id}?");
            if (!confirmDelete)
            {
                return;
            }

            await Api.DeleteUserAsync(id);
            await LoadAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private void StartEdit(ReproIVF.Shared.Auth.UserView item)
    {
        editingId = item.Id;
        form = new ReproIVF.Shared.Auth.UserUpsert
        {
            Username = item.Username,
            Role = item.Role,
            Password = string.Empty
        };
    }

    private void ResetForm()
    {
        editingId = null;
        form = new ReproIVF.Shared.Auth.UserUpsert { Role = AppRoles.Client };
    }
}
